Given an array A of size N of integers. Your task is to find the sum of minimum and maximum element in the array.
class Solution
{
   public:
    int findSum(int A[], int N)
    {    int min=A[0],max=A[0];
    	//code here.
    	for(int i=0;i<N;i++)
    	{
    	    
    	    if(A[i]<min)
    	    {
    	        min=A[i];
    	    }
    	    if(A[i]>max)
    	    {
    	        max=A[i];
    	    }
    	}
    	return max+min;
    }

};
